# ##############################################################################
# Bspwm setup general keybindings
# ##############################################################################

# For maximal goofiness: Cmd => ctrl, Ctrl => mod4, Opt_L => mod1, Opt_R => mod5
ctrl + mod1 + shift + {Left,Down,Up,Right}
  bspc node -s {west,south,north,east}
ctrl + mod1 + shift + {1-8}
  id=$(bspc query -N -n); bspc node -d ^{1-8}; bspc node -f ${id}
ctrl + mod1 + shift + f
  bspc node -t ~fullscreen
ctrl + mod1 + shift + space
  bspc node -t ~floating
ctrl + mod1 + shift + r
  bash ~/.Xsession --reset; pkill -USR1 -x sxhkd; bash ~/.config/bspwm/bspwmrc
ctrl + mod1 + shift + l
  bash ~/dotfiles/scripts/rofi-shutdown.sh
ctrl + mod1 + shift + Return
  kitty

# ##############################################################################
# Bspwm setup MacOS style keybindings
# ##############################################################################

ctrl + q
  bspc node -c
ctrl + Tab
  rofi -modi window -show-icons -show window
ctrl + space
  rofi -modi run -show run
ctrl + shift + 3
  scrot -e 'mv $f ~/Desktop/' && notify-send "Screenshot saved to: ~/Desktop/"
ctrl + shift + 4
  scrot -e 'mv $f ~/Desktop/' && notify-send "Screenshot saved to: ~/Desktop/"
XF86MonBrightnessDown
  bash ~/dotfiles/scripts/x-adjust-brightness.sh all down
XF86MonBrightnessUp
  bash ~/dotfiles/scripts/x-adjust-brightness.sh all up
XF86LaunchA
  notify-send "XF86LaunchA"
XF86LaunchB
  rofi -modi run -show run
XF86KbdBrightnessDown
  notify-send "XF86KbdBrightnessDown"
XF86KbdBrightnessUp
  notify-send "XF86KbdBrightnessUp"
XF86AudioPrev
  dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
XF86AudioPlay
  dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
XF86AudioNext
  dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
XF86AudioMute
  pulsemixer --id 0 --toggle-mute
XF86AudioLowerVolume
  pulsemixer --id 0 --change-volume -1
XF86AudioRaiseVolume
  pulsemixer --id 0 --change-volume +1
XF86Eject
  notify-send "XF86Eject"
