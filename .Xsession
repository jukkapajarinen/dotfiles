#!/bin/bash

# ##############################################################################
# Xsession init configurations
# ##############################################################################

bash ~/dotfiles/scripts/display-settings.sh home;
bash ~/dotfiles/scripts/keyboard-settings.sh;
bash ~/dotfiles/scripts/pointer-settings.sh;
xsetroot -solid '#002b36';
xrdb ~/.Xresources;

# ##############################################################################
# Xsession auto-start applications
# ##############################################################################

pulseaudio --daemonize &
nitrogen --restore &
nm-applet &
pasystray &
megasync &
blueman-applet &
caffeine-indicator &
clipit &

# ##############################################################################
# Xsession starting X window manager
# ##############################################################################

exec i3;
