#!/bin/bash

# ##############################################################################
# Xsession init configurations
# ##############################################################################

bash ~/dotfiles/scripts/x-display-settings.sh;
bash ~/dotfiles/scripts/x-pointer-settings.sh;
xkbcomp ~/dotfiles/keyboard/keyboard_apple_fi.xkbmap $DISPLAY
xrdb ~/.Xresources;
[[ "$1" == "--reset" ]] && exit;

# ##############################################################################
# Xsession auto-start applications
# ##############################################################################

sxhkd &
compton &
xscreensaver -no-splash &
nitrogen --restore &
nm-applet &
pasystray &
megasync &
blueman-applet &
caffeine-indicator &
clipit &

# ##############################################################################
# Xsession starting X window manager
# ##############################################################################

exec bspwm;
