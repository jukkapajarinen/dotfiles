#!/usr/bin/env sh

# Yabai settings
yabai -m config window_placement second_child
yabai -m config window_topmost on
yabai -m config auto_balance on
yabai -m config layout bsp
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse off
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9
yabai -m config window_opacity_duration 0.0
yabai -m config window_shadow off
yabai -m config window_border on
yabai -m config window_border_placement outset
yabai -m config window_border_width 1
yabai -m config window_border_radius 6.0
yabai -m config active_window_border_color 0xffd90429
yabai -m config normal_window_border_color 0x00000000
yabai -m config insert_window_border_color 0x00000000
yabai -m config top_padding 8
yabai -m config bottom_padding 8
yabai -m config left_padding 8
yabai -m config right_padding 8
yabai -m config window_gap 8
yabai -m config status_bar off

# Yabai excludes
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Stickies$" manage=off
yabai -m rule --add app="^Simulator$" manage=off
yabai -m rule --add app="^The Unarchiver$" manage=off
yabai -m rule --add app="^Transmission$" manage=off
yabai -m rule --add app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^Digital Colour Meter$" manage=off
yabai -m rule --add app="^Unity Hub$" manage=off
yabai -m rule --add app="^MacPass$" title="^(General|Integration|Workflow|Updates|Plugins)$" manage=off
yabai -m rule --add app="^Mail$" title="^(Signatures|Accounts|Junk Mail|Fonts & Colours|Viewing|Composing|Signatures|Rules)$" manage=off
yabai -m rule --add app="^XD$" title="^(Adobe XD)$" manage=off