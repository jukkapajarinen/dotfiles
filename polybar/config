[colors]
background = #1e1d40
foreground = #fcfcfc
black = #000000
red = #d90429
green = #3ad900
yellow = #fad000
blue = #6943ff
magenta = #ff2c70
cyan = #80fcff
white = #c7c7c7

[bar/topbar]
monitor = ${env:MONITOR:fallback eDP-1}
width = 100%
height = 29
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = ${colors.red}
border-bottom-size = 3
border-color = ${colors.yellow}
module-margin = 2
font-0 = "Fira Code:pixelsize=12:bold"
modules-left = i3
modules-center = pulseaudio cpu memory wlan battery temperature date logout
tray-position = right
tray-padding = 2
tray-maxsize = 16

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true
label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.yellow}
label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.yellow}
label-focused-overline = ${colors.yellow}
label-focused-padding = 2
label-unfocused = %index%
label-unfocused-padding = 2
label-visible = %index%
label-visible-foreground = ${colors.foreground}
label-visible-background = ${colors.background}
label-visible-overline = ${colors.yellow}
label-visible-padding = 2
label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
format-volume-overline = ${colors.red}
label-volume = Vol: %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = "Muted"
label-muted-foreground = ${colors.red}
format-muted-overline = ${colors.red}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "CPU: "
format-prefix-foreground = ${colors.foreground}
format-overline = ${colors.green}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 1
format-prefix = "Mem: "
format-prefix-foreground = ${colors.foreground}
format-overline = ${colors.yellow}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
format-connected-overline = ${colors.blue}
label-connected = %local_ip% %essid%
format-disconnected = "No WiFi"
ramp-signal-0 = 1/5
ramp-signal-1 = 2/5
ramp-signal-2 = 3/5
ramp-signal-3 = 4/5
ramp-signal-4 = 5/5
ramp-signal-foreground = ${colors.green}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
format-charging = <label-charging>
label-charging = Bat: %percentage%%
format-charging-overline = ${colors.magenta}
format-discharging = <label-discharging>
label-discharging = Bat: %percentage%%
format-discharging-overline = ${self.format-charging-overline}
format-full = <label-full>
label-full = Bat: 100%
format-full-overline = ${self.format-charging-overline}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <label>
format-overline = ${colors.cyan}
format-warn = <label-warn>
format-warn-overline = ${colors.cyan}
label = Temp: %temperature-c%
label-warn = Temp: %temperature-c%
label-warn-foreground = ${colors.red}

[module/date]
type = internal/date
interval = 1
date = "%d.%m.%Y"
time = %H:%M:%S
format-overline = ${colors.green}
label = %date% %time%

[module/logout]
type = custom/menu
format-overline = ${colors.red}
label-open = Logout?
label-close = No
label-separator = " | "
menu-0-0 = Yes
menu-0-0-exec = "i3-msg exit"
