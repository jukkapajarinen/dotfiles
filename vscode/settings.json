{
    "workbench.colorTheme": "Shades of Purple",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.list.horizontalScrolling": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "editor.fontFamily": "'Fira Code', 'Monaco', 'Menlo', monospace",
    "terminal.integrated.fontFamily": "'Fira Code', 'Monaco', 'Menlo', monospace",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.fontSize": 14,
    "editor.fontSize": 14,
    "editor.lineHeight": 20,
    "editor.letterSpacing": 0.5,
    "editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "editor.cursorStyle": "block",
    "editor.cursorWidth": 5,
    "editor.cursorBlinking": "blink",
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "top",
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "workbench.startupEditor": "newUntitledFile",
    "editor.glyphMargin": true,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "search.showLineNumbers": true,
    "search.location": "panel",
    "workbench.editor.enablePreview": false,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.tabSize": 2,
    "editor.multiCursorModifier": "ctrlCmd",
    "emmet.triggerExpansionOnTab": true,
    "window.zoomLevel": 0,
    "editor.minimap.enabled": true,
    "workbench.activityBar.visible": true,
    "telemetry.enableTelemetry": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.validate.enable": false,
    "git.alwaysSignOff": true,
    "breadcrumbs.enabled": true,
    "cssrem.rootFontSize": 20,
    "eslint.nodePath": "/usr/local/bin/node",
    "eslint.validate": ["javascript"],
    "eslint.options": { "configFile": "./.eslintrc.json" },
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shellArgs.linux": ["-l"],
    "terminal.integrated.shellArgs.osx": ["-l"],
    "terminal.external.linuxExec": "alacritty",
    "terminal.external.osxExec": "Terminal.app"
}