# General customizations
for_window [class=".*"] border pixel 0
gaps inner 16
focus_follows_mouse no
hide_edge_borders none

# Goofy variables for easier keybindings
set $Ctrl Mod4
set $Cmd Control
set $Opt Mod1
set $Opt2 Mod5
# set $t3 tslash
# set $f3 dstroke
# set $s3 ssharp
# set $w3 lstroke
# set $e3 EuroSign
# set $one3 copyright
# set $two3 at
# set $three3 sterling
# set $four3 dollar
# set $five3 onehalf
# set $six3 threequarters
# set $seven3 bar
# set $eight3 bracketleft
# set $nine3 bracketright
# set $zero3 braceright
# set $r4 registered
# set $c4 copyright
# set $l4 Lstroke

# Workspace variable names
set $ws1 " 1 "
set $ws2 " 2 "
set $ws3 " 3 "
set $ws4 " 4 "
set $ws5 " 5 "
set $ws6 " 6 "
set $ws7 " 7 "
set $ws8 " 8 "
set $ws9 " 9 "
set $ws10 " 10 "

# Workspace settings
bindsym $Cmd+$Opt+$Ctrl+1 workspace $ws1
bindsym $Cmd+$Opt+$Ctrl+2 workspace $ws2
bindsym $Cmd+$Opt+$Ctrl+3 workspace $ws3
bindsym $Cmd+$Opt+$Ctrl+4 workspace $ws4
bindsym $Cmd+$Opt+$Ctrl+5 workspace $ws5
bindsym $Cmd+$Opt+$Ctrl+6 workspace $ws6
bindsym $Cmd+$Opt+$Ctrl+7 workspace $ws7
bindsym $Cmd+$Opt+$Ctrl+8 workspace $ws8
bindsym $Cmd+$Opt+$Ctrl+9 workspace $ws9
bindsym $Cmd+$Opt+$Ctrl+0 workspace $ws10
bindsym $Cmd+$Opt+$Ctrl+Shift+1 move container to workspace $ws1
bindsym $Cmd+$Opt+$Ctrl+Shift+2 move container to workspace $ws2
bindsym $Cmd+$Opt+$Ctrl+Shift+3 move container to workspace $ws3
bindsym $Cmd+$Opt+$Ctrl+Shift+4 move container to workspace $ws4
bindsym $Cmd+$Opt+$Ctrl+Shift+5 move container to workspace $ws5
bindsym $Cmd+$Opt+$Ctrl+Shift+6 move container to workspace $ws6
bindsym $Cmd+$Opt+$Ctrl+Shift+7 move container to workspace $ws7
bindsym $Cmd+$Opt+$Ctrl+Shift+8 move container to workspace $ws8
bindsym $Cmd+$Opt+$Ctrl+Shift+9 move container to workspace $ws9
bindsym $Cmd+$Opt+$Ctrl+Shift+0 move container to workspace $ws10

# General controls
bindsym $Cmd+q kill
bindsym $Cmd+$Opt+$Ctrl+t exec "urxvt"
bindsym $Cmd+Tab exec "rofi -modi window -show-icons -show window"
bindsym $Cmd+space exec "rofi -modi run -show run"
bindsym $Cmd+Shift+3 exec "scrot -e 'mv $f ~/Desktop/'"
bindsym $Cmd+Shift+4 exec "scrot -e 'mv $f ~/Desktop/'"

# Xf86 keybindings
bindsym XF86MonBrightnessDown exec "$HOME/dotfiles/scripts/adjust-brightness.sh all down"
bindsym XF86MonBrightnessUp exec "$HOME/dotfiles/scripts/adjust-brightness.sh all up"
bindsym XF86LaunchA exec "$HOME/dotfiles/scripts/adjust-brightness.sh all reset"
bindsym XF86LaunchB exec "rofi -modi run -show run"
bindsym XF86KbdBrightnessDown exec "i3-nagbar -t 'warning' -m 'XF86KbdBrightnessDown'"
bindsym XF86KbdBrightnessUp exec "i3-nagbar -t 'warning' -m 'XF86KbdBrightnessUp'"
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioMute exec "pulsemixer --id 0 --toggle-mute"
bindsym XF86AudioLowerVolume exec "pulsemixer --id 0 --change-volume -1"
bindsym XF86AudioRaiseVolume exec "pulsemixer --id 0 --change-volume +1"
bindsym XF86Eject exec "i3-nagbar -t 'warning' -m 'XF86Eject'"

# Controls for focused window
bindsym $Cmd+$Opt+$Ctrl+Left move left
bindsym $Cmd+$Opt+$Ctrl+Down move down
bindsym $Cmd+$Opt+$Ctrl+Up move up
bindsym $Cmd+$Opt+$Ctrl+Right move right
bindsym $Cmd+$Opt+$Ctrl+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $Cmd+$Opt+$Ctrl+s layout stacking
bindsym $Cmd+$Opt+$Ctrl+w layout tabbed
bindsym $Cmd+$Opt+$Ctrl+e layout toggle split

# Toggle floating mode
bindsym $Cmd+$Opt+$Ctrl+space floating toggle
floating_modifier $Cmd+$Opt+$Ctrl

# Move focused container to left/right display
bindsym $Cmd+$Opt+$Ctrl+Shift+Left move container to output left; focus output left
bindsym $Cmd+$Opt+$Ctrl+Shift+Right move container to output right; focus output right

# Top-level i3 controls
bindsym $Cmd+$Opt+$Ctrl+Shift+r restart
bindsym $Cmd+$Opt+$Ctrl+Shift+c reload
bindsym $Cmd+$Opt+$Ctrl+Shift+l exec "i3lock -c 1e1d40"

# i3bar configuration
bar {
  i3bar_command i3bar
  status_command $HOME/dotfiles/scripts/i3_statuscmd.sh
  output primary
  tray_output primary
  tray_padding 8
  workspace_buttons yes
  strip_workspace_numbers yes
  strip_workspace_name no
  font pango:Fira Code 10
  separator_symbol " "
  position top
  height 32
  colors {
    background #1e1d40
    statusline #6943ff
    separator #6943ff
    focused_workspace #6943ff #6943ff #ffffff
    active_workspace #6943ff #6943ff #ffffff
    inactive_workspace #1e1d40 #1e1d40 #ffffff
    urgent_workspace #1e1d40 #1e1d40 #ffffff
    binding_mode #1e1d40 #1e1d40 #ffffff
  }
}
