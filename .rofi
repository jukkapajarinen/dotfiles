! ##############################################################################
! Rofi setup configurations
! ##############################################################################

rofi.hide-scrollbar: true
rofi.font: Fira Code 10
rofi.color-normal: #002b36, #eee8d5, #002b36, #dc322f, #eee8d5
rofi.color-urgent: #002b36, #eee8d5, #002b36, #dc322f, #eee8d5
rofi.color-active: #002b36, #eee8d5, #002b36, #dc322f, #eee8d5
rofi.color-window: #002b36, #dc322f, #002b36

! ##############################################################################
! Rofi setup keybindings
! ##############################################################################

rofi.kb-mode-next: Shift+Right
rofi.kb-mode-previous: Shift+Left
rofi.kb-row-down: Down,Control+Tab
rofi.kb-row-up: Up,Control+Shift+Tab