{
  "workbench.colorTheme": "Shades of Purple",
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.list.horizontalScrolling": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "editor.fontFamily": "'Fira Code', 'Monaco', 'Menlo', monospace",
  "terminal.integrated.fontFamily": "'Fira Code', 'Monaco', 'Menlo', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.fontSize": 12,
  "editor.fontSize": 12,
  "editor.lineHeight": 18,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "block",
  "editor.cursorWidth": 5,
  "editor.cursorBlinking": "blink",
  "editor.renderWhitespace": "all",
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "workbench.startupEditor": "newUntitledFile",
  "editor.glyphMargin": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "xml.format.preserveEmptyContent": true,
  "xml.format.splitAttributes": false,
  "xml.format.spaceBeforeEmptyCloseTag": true,
  "xml.format.quotations": "doubleQuotes",
  "xml.format.enabled": true,
  "xml.format.joinContentLines": false,
  "xml.format.preservedNewlines": 0,
  "search.showLineNumbers": true,
  "search.location": "panel",
  "workbench.editor.enablePreview": false,
  "explorer.confirmDragAndDrop": false,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "ctrlCmd",
  "emmet.triggerExpansionOnTab": true,
  "window.zoomLevel": 0,
  "editor.minimap.enabled": true,
  "workbench.activityBar.visible": true,
  "telemetry.enableTelemetry": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.alwaysSignOff": true,
  "breadcrumbs.enabled": true,
  "cssrem.rootFontSize": 20,
  "javascript.validate.enable": false,
  "eslint.enable": true,
  "eslint.nodePath": "/usr/local/bin/node",
  "eslint.validate": ["javascript"],
  "eslint.options": { "configFile": "${env.HOME}/dotfiles/linters/.eslintrc.json" },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "omnisharp.useGlobalMono": "always",
  "stylelint.enable": true,
  "stylelint.config": { "extends": "${env.HOME}/dotfiles/linters/.stylelintrc.json" },
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.shellArgs.linux": ["-l"],
  "terminal.integrated.shellArgs.osx": ["-l"],
  "terminal.integrated.shell.osx": "/bin/bash"
}